<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Gastos">

  <ListView
      android:id="@+id/lista_gastos"
      android:layout_width="416dp"
      android:layout_height="601dp"
      android:layout_marginTop="10dp"
      app:layout_constraintTop_toBottomOf="@+id/text_gastos"
      tools:layout_editor_absoluteX="-8dp"
      tools:ignore="MissingConstraints" />

  <TextView
      android:id="@+id/text_gastos"
      android:layout_width="167dp"
      android:layout_height="37dp"
      android:text="GASTOS"
      tools:layout_editor_absoluteX="18dp"
      tools:layout_editor_absoluteY="16dp"
      tools:ignore="MissingConstraints" />

  <Button
      android:id="@+id/btn_gastos"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:text="Button"
      app:layout_constraintTop_toBottomOf="@+id/lista_gastos"
      tools:layout_editor_absoluteX="314dp"
      tools:ignore="MissingConstraints,UnknownId"
      android:onClick="crearPopup"/>

</android.support.constraint.ConstraintLayout>