<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ALFRED" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ActionBarColor</item>
        <item name="colorPrimaryDark">@color/ActionBarColor</item>
        <item name="colorAccent">@color/MainColor</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ALFRED.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ALFRED.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ALFRED.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>